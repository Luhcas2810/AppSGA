
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Crear Programa-->
<p>

</p>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Administración</a></li>
        <li class="breadcrumb-item active" aria-current="page">Programas</li>
    </ol>
</nav>
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                Lista de Programas
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-sm btn-outline-success" onclick="abrirPopUpFormPrograma(null)"> <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                    </div>
                </div>
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbPrograma" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Carrera</th>
                                    <th>Duración</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>

<!-- Modal para Crear/Editar Programa -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="FormModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="border-radius: 8px;">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="FormModalLabel">Programa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: white;">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtIdPrograma" class="model" value="0" type="hidden" />
                    <div class="form-group row">
                        <label for="Carrera" class="col-sm-3 col-form-label col-form-label-sm">Carrera</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control-sm model" id="txtCarrera" name="Carrera">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Codigo" class="col-sm-3 col-form-label col-form-label-sm">Duracion</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control form-control-sm model" id="intDuracion" name="Duracion">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardarCambios" type="button" class="btn btn-sm btn-primary" onclick="GuardarPrograma()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Programa_Crear.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var getListaProgramaURL = '@Url.Action("ObtenerListaPrograma", "Programa")';
        var postActualizarProgramaURL = '@Url.Action("ActualizarPrograma", "Programa")';
    </script>
}
