    $(document).ready(function () {
        $('#tbCurso').DataTable({
            ajax: getListaCursoURL,
            columns: [
                { data: 'Nombre' },
                { data: 'Codigo' },
                { data: 'IdPlan' },
                { data: 'Creditos' },
                {
                    data: null,
                    render: function (data, type, row) {
                        return `<button class="btn btn-sm btn-primary" onclick="abrirPopUpForm(${row.IdCurso})">Editar</button>`;
                    }
                }
            ],
            language: {
                url: getDatatableSpanish
            }
        });
    });

    function abrirPopUpForm(id) {
        // Lógica para abrir el modal y cargar datos en caso de edición
        $('#FormModal').modal('show');
    }

    function GuardarCurso() {
