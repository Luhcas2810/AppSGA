
@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>

</p>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Administración</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cursos</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-dark text-white">Lista de Cursos</div>
            <div class="card-body">
                <button type="button" class="btn btn-sm btn-outline-success" onclick="abrirPopUpForm(null)">
                    <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo
                </button>
                <hr />
                <table id="tbCurso" class="table table-striped table-bordered nowrap compact" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Código</th>
                            <th>Plan</th>
                            <th>Créditos</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Crear/Editar Curso -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="FormModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="border-radius: 8px;">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="FormModalLabel">Curso</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="color: white;">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtIdCurso" class="model" value="0" type="hidden" />
                    <div class="form-group row">
                        <label for="Nombre" class="col-sm-3 col-form-label col-form-label-sm">Nombre</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control-sm model" id="txtNombre" name="Nombre">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Codigo" class="col-sm-3 col-form-label col-form-label-sm">Código</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control-sm model" id="txtCodigo" name="Codigo">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Plan" class="col-sm-3 col-form-label col-form-label-sm">Plan</label>
                        <div class="col-sm-9">
                            <select class="form-control form-control-sm model" id="cboPlan" name="Plan"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Creditos" class="col-sm-3 col-form-label col-form-label-sm">Créditos</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control form-control-sm model" id="txtCreditos" name="Creditos">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardarCambios" type="button" class="btn btn-sm btn-primary" onclick="GuardarCurso()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/Views/Curso_Crear.js" type="text/javascript"></script>
    <script type="text/javascript">
        var getListaCursoURL = '@Url.Action("ObtenerListaCurso", "Curso")';
        var postActualizarCursoURL = '@Url.Action("ActualizarCurso", "Curso")';
        var getListaPlanURL = '@Url.Action("ObtenerListaPlan", "PlanEstudio")';
        var getDatatableSpanish = '/content/Views/datatable_spanish.json';
    </script>
}


